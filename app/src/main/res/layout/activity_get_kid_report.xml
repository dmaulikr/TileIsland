<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_get_kid_report"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorOrange"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.android.tileisland.GetKidReport">

    <TextView
        android:id="@+id/get_report_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:scrollbars="vertical"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/your_child_report_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="top"
        android:textColor="@color/colorPrimaryRed"
        android:textSize="25sp"
        android:text="@string/your_child_report"/>

    <TextView
        android:id="@+id/successful_attempt_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="100dp"
        android:gravity="top"
        android:scrollbars="vertical"
        android:textColor="@color/black"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/failed_attempt_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/successful_attempt_textView"
        android:gravity="top"
        android:scrollbars="vertical"
        android:textColor="@color/black"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/total_attempt_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/failed_attempt_textView"
        android:gravity="top"
        android:scrollbars="vertical"
        android:textColor="@color/black"
        android:textSize="25sp" />

    <Button
        android:id="@+id/bGetLeaderBoard"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/total_attempt_textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_register"
        android:onClick="onLeaderBoardClick"
        android:text="@string/get_leader_board"/>

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_exit"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:onClick="onExitClick"/>

</RelativeLayout>
